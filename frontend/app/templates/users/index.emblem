section
  .col-md-12
    ul.breadcrumb
      li = link-to 'index' | Home
      li.active Users
    h1 Listing users
  .col-md-12
    form#users-filter-form.form-inline submit="search"
      .form-group
        = input type="text" value=term id="query" class="form-control" placeholder="enter part of first_name, last_name or mobile_number"
        button.btn.btn-primary click="search" Search user
      .form-group
        span.or or
      .form-group
        = input type="text" value=userIdOrMkey id="user_id_or_mkey" class="form-control" placeholder="enter id or mkey"
        button.btn.btn-primary click="search" Go to user
    br
  .col-md-12 class=isDataAvailable::hidden
    p.text-info class=isSearch::hidden Search results for <strong>#{term}</strong>
    p.text-info Listed #{count} records of #{totalCount} total
    table.table
      thead
        tr
        th ID
        th Name
        th Mobile number
        th Device platform
        th Status
        th Verification code
        th Verification code sent at
        th
      tbody
        each user in model
          tr class=user.status class=user.devicePlatform
            td = user.id
            td = user.name
            td = user.mobileNumber
            td = user.devicePlatform
            td
              view "status" status=user.status
            td = user.verificationCode
            td = user.verificationDateTime
            td
              link-to 'users.show' user | Show
      br

  .col-md-12 class=isDataAvailable:hidden
    p.text-info No users found
